
import cv2
import matplotlib.pyplot as plt

image_path = 'pexels-jean-daniel-2570139.jpg' 
image = cv2.imread(image_path)

if image is None:
    print("Error: Could not open or find the image.")
else:
    image_rgb = cv2.cvtColor(image, cv2.COLOR_BGR2RGB) 
    image_gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)  
    image_hsv = cv2.cvtColor(image, cv2.COLOR_BGR2HSV)

    plt.figure(figsize=(15, 10))

    plt.subplot(1, 4, 1)
    plt.imshow(image_rgb)
    plt.title('Original Image (RGB)')
    plt.axis('off')

    plt.subplot(1, 4, 2)
    plt.imshow(image_gray, cmap='gray')
    plt.title('Grayscale Image')
    plt.axis('off')

    plt.subplot(1, 4, 3)
    plt.imshow(image)
    plt.title('Original Image (BGR)')
    plt.axis('off')

    plt.subplot(1, 4, 4)
    plt.imshow(cv2.cvtColor(image_hsv, cv2.COLOR_HSV2RGB))
    plt.title('HSV Image')
    plt.axis('off')

    plt.show()

    output_rgb_path = 'output_image_rgb.jpg'
    output_gray_path = 'output_image_gray.jpg'
    output_hsv_path = 'output_image_hsv.jpg'

    cv2.imwrite(output_rgb_path, cv2.cvtColor(image_rgb, cv2.COLOR_RGB2BGR))  # Convert back to BGR before saving
    cv2.imwrite(output_gray_path, image_gray)
    cv2.imwrite(output_hsv_path, image_hsv)

    print(f"RGB Image saved at: {output_rgb_path}")
    print(f"Grayscale Image saved at: {output_gray_path}")
    print(f"HSV Image saved at: {output_hsv_path}")
